import java.util.*;
public class prefixeven
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
int p=sc.nextInt();
int n=50;
int[] prefix =new int[n+1];
prefix[0]=0;
for(int i=1;i<n+1;i++)
{
prefix[i]=prefix[i-1]+2*i;
}
for(int i=0;i<p;i++)
{
int sum=sc.nextInt();
System.out.println(prefix[sum]);
}
}
}
